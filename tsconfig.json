{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "jsx": "react",
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
